<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
      <%= form_for(@info) do |f| %>
          <%= f.label :from %>
          <%= f.email_field :from, class: 'form_control' %>
          <br><br>
          <%= f.label :to %>
          <%= f.email_field :to, class: 'form_control' %>
          <br><br>
          <%= f.label :subject %>
          <%= f.text_field :subject, class: 'form_control' %>
          <br><br>
          <%= f.label :body %>
          <%= f.text_field :body, class: 'form_control text' %>
          <br><br>
          <%= f.submit "Create my account", class: "btn btn-primary"%>
        <% end %>
    </div>
  </div>


  </body>
</html>
